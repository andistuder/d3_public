#viewport
  - if chapter_detail.present?
    #chapter_detail.page
      %h1= @chapter.name

      %p= @chapter.content

      - @chapter.content_areas.each do |ca|
        %p= ca.title
        %p= ca.content

  .page.intro
    %h1 User Guide
    - if @user_guide_intro
      .introduction= sanitize(textilize(@user_guide_intro.content))

    - if @user_guide_body
      = sanitize(textilize(@user_guide_body.content))


  %section#chapter_summaries
    - @chapters.each do |parent|
      %div{:class => "#{parent.slug} page"}
        - if parent.children.length > 0
          %h1= parent.name
          - parent.children.each do |child|
            .chapter_summary
              %h2= child.name
              =sanitize(textilize(child.summary))
