#viewport
  - if chapter_detail.present?
    #chapter_detail.page.expander
      %h1= chapter_detail.name

      =textilize(chapter_detail.content).html_safe

      - chapter_detail.content_areas.each do |ca|
        .section
          %h3.title
            %span.more
              %a
                SHOW
            = ca.title
          .body
            =sanitize(textilize(ca.content))
            - ca.assets.each do |asset|
              =image_tag(asset.asset.url(:medium))

  .page.intro
    %h1 User Guide
    - if @user_guide_intro
      .introduction= sanitize(textilize(@user_guide_intro.content))

    - if @user_guide_body
      = sanitize(textilize(@user_guide_body.content))


  %section#chapter_summaries
    - @chapters.each do |parent|
      %div{:class => "#{parent.slug} page"}
        - if parent.children.length > 0
          %h1= parent.name
          - parent.children.each do |child|
            .chapter_summary
              %h2= child.name
              =sanitize(textilize(child.summary))
