%section#breadcrumb
  = render "breadcrumb"
.container
  %section#content
    -if @partner_category.name == "Distributors" && @partner_category.partners.present?
      = render "layouts/slideshow", :object => @partner_category.partners.first, :full_width => true
    #social_bookmarks
      TODO: social bookmarks here?
    -if @partner_category.name == "Distributors" && @partner_category.partners.present?
      -if @partner_category.partners.present?
        %h1.after-slideshow= @partner_category.partners.first.name
        .introduction
          %p= @partner_category.partners.first.summary
        %section#partner_address
          %h2= "Details"
          #google_map= "TODO Map Here"
          %table
            - if @partner_category.partners.first.address_line_one.present?
              %tr
                %td.left= "Location"
                %td.right= @partner_category.partners.first.address_line_one
            - if @partner_category.partners.first.address_line_two.present?
              %tr
                %td
                %td= @partner_category.partners.first.address_line_two
            - if @partner_category.partners.first.address_line_one.present? || @partner_category.partners.first.postcode.present?
              %tr
                %td
                %td= "#{@partner_category.partners.first.town} #{@partner_category.partners.first.postcode}"
            - if @partner_category.partners.first.country.present?
              %tr
                %td
                %td= @partner_category.partners.first.country
            - if @partner_category.partners.first.company.present?
              %tr
                %td= "Company"
                %td= @partner_category.partners.first.company
            - if @partner_category.partners.first.phone.present?
              %tr
                %td= "Phone"
                %td= @partner_category.partners.first.phone
            - if @partner_category.partners.first.email.present?
              %tr
                %td= "Email"
                %td= link_to @partner_category.partners.first.email, "mailto:#{@partner_category.partners.first.email}"
            - if @partner_category.partners.first.website.present?
              %tr
                %td= "Website"
                %td= link_to @partner_category.partners.first.website, @partner_category.partners.first.website
          - for content_area in @partner_category.partners.first.partner_content_areas.ordered do
            %section.partner_show
              %h2= content_area.title
              = sanitize(textilize(content_area.content))
    - else
      %h1= @partner_category.name
      .introduction
        %p= @partner_category.content
      %section
        map here
      - for partner in @partner_category.partners do
        %section{:id => partner.slug, :class => "partner_index #{@partner_category.slug}"}
          - if (@partner_category.name == "Rental Partners" || @partner_category.name == "d3 Studios Global") && partner.logo.present?
            %img{:src => partner.logo.asset.url(:small), :alt => partner.logo.description, :class => "no-shadow"}
          - elsif partner.assets.present?
            %img{:src => partner.assets.first.asset.url(:small), :alt => partner.assets.first.description}
          .wrapper
            %h2= link_to partner.name, "#{partner_category_path(@partner_category)}/#{partner.slug}"
            %p= partner.summary
            -#%p.read_more= link_to "Find #{partner.name}", partner_category_partner_path(partner)
          %ul.contact_details
            - if partner.town.present? || partner.postcode.present?
              %li= "#{partner.town} #{partner.postcode}"
            - if partner.country.present?
              %li= partner.country
            -if partner.phone.present?
              %li= partner.phone
            -if partner.email.present?
              %li= link_to partner.email, "mailto:#{partner.email}"
            -if partner.website.present?
              %li= link_to partner.website, partner.website
%section#prev_next_bar
  &nbsp;
%section#related
  = render "pages/related"