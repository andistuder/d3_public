%section#breadcrumb
  = render "pages/breadcrumb"
.container
  %section#sidebar
    = render :partial => "sidebar"

  %section#content
    %article#faqs.expander


      %h1 FAQs

      - for faq in @faqs do
        .section
          %h3.title
            %span.more
              %a.driver
                SHOW
            = link_to faq.question, "javascript:void(0)", :class => "driver"
          .body.hidden
            =sanitize(textilize(faq.answer))


%section#prev_next_bar
  &nbsp;
%section#related
  = render "pages/related"