%section#breadcrumb
  = render "pages/breadcrumb"
.container
  %section#sidebar
    = render "sidebar"
  %section#content
    %span#prevBtn
      =link_to "&nbsp;".html_safe, "javascript:void(0);"
    %span#nextBtn
      =link_to "&nbsp;".html_safe, "javascript:void(0);"
    - if @feature_category.vimeo_id.present?
      .display-none
        %iframe{:frameborder => "0", :height => "450", :src => "http://player.vimeo.com/video/#{@feature_category.vimeo_id}", :width => "717", :id => "vimeo_player"}

    #slider
      %ul
        - for asset in @feature_category.assets do
          %li
            %img{:src => asset.asset.url(:large), :width => "717px", :height => "448px", :alt => asset.description}
    - if @feature_category.vimeo_id.present?
      .vimeo_link
        |
        =link_to "Video", "javascript:void(0);"

    #social_bookmarks
      TODO: social bookmarks here
    %h1.after-slideshow= @feature_category.name
    %p.introduction= @feature_category.content
    - for feature in @feature_category.features do
      %section{:id => feature.slug, :class => "alternating"}
        -if feature.asset.present?
          %img{:src => feature.asset.asset.url(:small), :alt => feature.asset.description}
        .wrapper
          %h2= feature.name
          %p= feature.content.html_safe
    -#- if @feature_category.vimeo_id.present?

      -#.display-none
      -#  %iframe{:frameborder => "0", :height => "448", :src => "http://player.vimeo.com/video/#{@feature_category.vimeo_id}", :width => "717", :id => "vimeo_player"}

%section#prev_next_bar
  - if @feature_category.previous_feature_cat.present?
    .previous
      %p
        %span Previous
      %p= link_to @feature_category.previous_feature_cat.name, @feature_category.previous_feature_cat
  - if @feature_category.next_feature_cat.present?
    .next
      %p
        %span Next
      %p= link_to @feature_category.next_feature_cat.name, @feature_category.next_feature_cat
%section#related
  = render "pages/related"
