%section#breadcrumb
  = render "pages/breadcrumb"
.container
  %section#sidebar
    %ul#chapters.treeview
      %li#user_guide_home= link_to "USER GUIDE HOME", "javascript:void();"

      - @chapters.each do |parent|
        %li.chapter{:id => parent.slug}
          %span
            = parent.name
          - if parent.children.length > 0
            %ul
              - parent.children.each do |child|
                %li= child.name

  %section#content

    %article#user_guide
      %h1 User Guide
      - if @user_guide_intro
        .introduction= sanitize(textilize(@user_guide_intro.content))

      - if @user_guide_body
        = sanitize(textilize(@user_guide_body.content))


      %section#chapter_summaries
        - @chapters.each do |parent|
          %div{:class => parent.slug}
            - if parent.children.length > 0
              %h1= parent.name
              - parent.children.each do |child|
                .chapter_summary
                  %h2= child.name
                  %p= child.summary

%section#prev_next_bar
  &nbsp;
%section#related
  = render "pages/related"