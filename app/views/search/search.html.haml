%section#breadcrumb
  .parent= link_to "Search"
  %ul
    %li &nbsp;
.container
  %section#content
    %h1 Search
    - results = @projects.length + @news.length + @features.length + @case_studies.length + @partners.length + @downloads.length + @faqs.length + @chapters.length + @tutorials.length
    %p= "#{pluralize(results, 'result')} for &quot;#{params[:query]}&quot;".html_safe
    .search_form
      %form.search{:action => "/search", :name => "searchform"}
        %input{:name => "query", :type => "text", :value => "Search", :title => "Search"}
        = hidden_field_tag(:cat, request.fullpath.split(/[^0-9a-z-]/)[1])
        %button.button{:type => "submit"}
          =image_tag("arrow_grey_right.png")
    - if params[:cat] == "support"
      =render "support"
      =render "news"
      =render "what_is_d3"
      =render "get_d3"
      =render "projects"
    - if params[:cat] == "what-is-d3"
      =render "what_is_d3"
      =render "projects"
      =render "news"
      =render "get_d3"
      =render "support"
    - if params[:cat] == "projects"
      =render "projects"
      =render "news"
      =render "what_is_d3"
      =render "get_d3"
      =render "support"
    - if params[:cat] == "get-d3"
      =render "get_d3"
      =render "news"
      =render "what_is_d3"
      =render "projects"
      =render "support"
    - else
      =render "news"
      =render "what_is_d3"
      =render "support"
      =render "get_d3"
      =render "projects"
%section#prev_next_bar
  &nbsp;
%section#related
  = render "pages/related"