%section#sidebar
  %ul
    %li.level_one
      Some title here?
      %ul
        - for content_area in @page.content_areas do
          %li= link_to content_area.name, "##{content_area.name.strip.gsub(/[^0-9a-z ]/i, '').gsub(/\s+/, "-").downcase}"
%section#content.d3_studios
  - if @page.assets.present?
    %span#prevBtn
      =link_to "&nbsp;".html_safe, "javascript:void(0);"
    %span#nextBtn
      =link_to "&nbsp;".html_safe, "javascript:void(0);"
  - if @page.vimeo_id.present?
    .display-none
      %iframe{:frameborder => "0", :height => "450", :src => "http://player.vimeo.com/video/#{@page.vimeo_id}", :width => "717", :id => "vimeo_player"}
  - if @page.assets.present?
    #slider.one-col
      %ul
        - for asset in @page.assets do
          %li
            %img{:src => asset.asset.url(:large), :width => "717px", :height => "448px", :alt => asset.description}
  - if @page.vimeo_id.present?
    .vimeo_link.one-col
      |
      =link_to "Video", "javascript:void(0);"
  #social_bookmarks
    TODO: social bookmarks here
  %h1.after-slideshow= @page.name
  - if @page.introduction.present?
    .introduction
      = sanitize(textilize(@page.introduction))
  - for content_area in @page.content_areas do
    %section{:id => "#{content_area.name.strip.gsub(/[^0-9a-z ]/i, '').gsub(/\s+/, "-").downcase}", :class => "alternating"}
      - if content_area.asset.present?
        %img{:src => content_area.asset.asset.url(:small), :alt => content_area.asset.description}
      .wrapper
        %h2= content_area.name
        = sanitize(textilize(content_area.content))
        - if content_area.see_more_label.present? && content_area.see_more_url.present?
          %p.read_more
            =link_to content_area.see_more_label, content_area.see_more_url

